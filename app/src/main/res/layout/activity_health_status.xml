<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/darkBG"
    tools:context=".HealthStatusActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="15dp"
        android:padding="10dp"
        android:background="@color/darkBG">

        <ImageView
            android:id="@+id/ivback"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_back"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weekly Health Status"
            android:fontFamily="@font/opensans"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/yellow" />

        <TextView
            android:id="@+id/tvinfo"
            android:layout_height="@dimen/_30sdp"
            android:layout_width="@dimen/_30sdp"
            android:background="@drawable/circle2"
            android:textColor="@color/yellow"
            android:fontFamily="@font/opensans"
            android:text="\?"
            android:textStyle="bold"
            android:textSize="@dimen/_16sdp"
            android:gravity="center"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:layout_gravity="center"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_320sdp"
        android:layout_marginTop="@dimen/_20sdp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hey Rajat, you seem to be really improving this week!"
        android:fontFamily="@font/opensans"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_40sdp"
        android:textStyle="bold"
        android:textSize="@dimen/_11sdp"
        android:textColor="@color/yellow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day Average:"
            android:fontFamily="@font/opensans"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6 / 7"
            android:layout_marginLeft="@dimen/_10sdp"
            android:fontFamily="@font/opensans"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/yellow" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Week Average:"
            android:fontFamily="@font/opensans"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.5 / 7"
            android:layout_marginLeft="@dimen/_10sdp"
            android:fontFamily="@font/opensans"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/yellow" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Month Average:"
            android:fontFamily="@font/opensans"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.2 / 7"
            android:layout_marginLeft="@dimen/_10sdp"
            android:fontFamily="@font/opensans"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/yellow" />
    </LinearLayout>

</LinearLayout>